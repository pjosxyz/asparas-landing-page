<section class="flex flex-col gap-12 mb-24">
  <a href="#" class="text-white bg-slate-800 border border-slate-700 flex rounded-full items-center gap-5 py-2 pl-4 pr-3 self-center">
    <p class="font-medium">Asparas v1 Live!</p>
    <div class="bg-slate-600 border border-slate-500 h-6 rounded-full flex justify-center items-center px-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"></path>
      </svg>
    </div>
  </a>

  <h1 class="text-center text-6xl leading-[64px] bg-gradient-to-t from-[#CBD5E1] to-[#FFFFFF] to-[hsla(0, 0%, 100%, 1)] inline-block text-transparent bg-clip-text font-bold tracking-tight">Asparas is a better way to rent and buy</h1>

