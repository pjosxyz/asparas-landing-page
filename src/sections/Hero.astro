  <picture>
    <!-- image to display on screens smaller than 600px -->
    <source media="(max-width: 599px)" srcset="images/app-screen-hero-[mobile].png">
    <!-- image to display on screens 600px or larger -->
    <source media="(min-width: 1024px)" srcset="images/app-screen-hero-lg.png">
    <!-- fallback image for browsers that don't support the picture element -->
    <img src="images/app-screen-hero-[mobile].png" alt="A screenshot of the Asparas application user interface">
  </picture>
